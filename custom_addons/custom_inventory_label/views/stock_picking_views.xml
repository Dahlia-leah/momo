<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_stock_picking_tree" model="ir.ui.view">
            <field name="name">stock.picking.tree.inherit.custom</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="label_product_name"/>
                    <field name="label_lot_number"/>
                    <field name="label_expected_weight"/>
                    <field name="label_actual_weight"/>
                </xpath>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_stock_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.custom</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <group string="Label Information">
                        <field name="label_product_name"/>
                        <field name="label_product_id"/>
                        <field name="label_material_name"/>
                        <field name="label_material_id"/>
                        <field name="label_lot_number"/>
                        <field name="label_expiration_date"/>
                        <field name="label_date_printing"/>
                        <field name="label_expected_weight"/>
                        <field name="label_actual_weight"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Action -->
        <record id="action_stock_picking_custom" model="ir.actions.act_window">
            <field name="name">Custom Stock Pickings</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_stock_picking_custom" name="Custom Stock Pickings"
                  parent="stock.menu_stock_root"
                  action="action_stock_picking_custom"/>
    </data>
</odoo>
